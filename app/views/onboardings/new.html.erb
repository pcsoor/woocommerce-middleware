<%= form_with model: @store, url: onboardings_path, local: true do |f| %>
  <div class="space-y-8">

    <!-- Store Connection Info -->
    <div>
      <h2 class="text-lg font-semibold text-gray-700 mb-4">Store Connection Details</h2>
      <div class="grid gap-6 md:grid-cols-3">
        <div>
          <%= f.label :api_url, "API URL", class: "block mb-2 text-sm font-medium text-gray-900" %>
          <%= f.text_field :api_url, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg w-full p-2.5" %>
        </div>

        <div>
          <%= f.label :consumer_key, "Consumer Key", class: "block mb-2 text-sm font-medium text-gray-900" %>
          <%= f.text_field :consumer_key, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg w-full p-2.5" %>
        </div>

        <div>
          <%= f.label :consumer_secret, "Consumer Secret", class: "block mb-2 text-sm font-medium text-gray-900" %>
          <%= f.text_field :consumer_secret, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg w-full p-2.5" %>
        </div>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="flex justify-center">
      <%= f.submit "Connect Store", class: "bg-gradient-to-r from-blue-400 via-blue-500 to-blue-600 bg-[length:200%_auto] hover:bg-right text-white font-medium rounded-lg text-sm px-8 py-3 text-center mt-6 hover:cursor-pointer transition-all duration-500 ease-in-out transform" %>
    </div>

  </div>
<% end %>
