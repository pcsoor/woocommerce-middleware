<% if @results["success"] %>
  <div class="alert alert-success mb-6">
    <div class="flex items-center gap-2">
      <%= icon "check-circle", variant: :mini, class: "w-5 h-5" %>
      <span>
        <strong><%= t('bulk_price_updates.results_alert.success_title') %></strong>
        <%= t('bulk_price_updates.results_alert.success_description') %>
      </span>
    </div>
  </div>
<% else %>
  <div class="alert alert-warning mb-6">
    <div class="flex items-center gap-2">
      <%= icon "exclamation-triangle", variant: :mini, class: "w-5 h-5" %>
      <span>
        <strong><%= t('bulk_price_updates.results_alert.warning_title') %></strong>
        <%= t('bulk_price_updates.results_alert.warning_description') %>
      </span>
    </div>
  </div>
<% end %> 