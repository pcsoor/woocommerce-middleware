<%= render "price_update_steps", current_step: 4 %>

<div class="card bg-base-100 border border-base-300">
  <div class="card-body">
    <div class="flex justify-between items-start mb-6">
      <div>
        <h1 class="card-title text-3xl"><%= t('bulk_price_updates.results_title') %></h1>
        <p class="text-base-content/70 mt-2"><%= t('bulk_price_updates.results_description') %></p>
      </div>
      <div class="text-right text-sm opacity-70">
        <% if @summary %>
          <div>File: <%= @summary["filename"] %></div>
        <% end %>
        <div><%= t('bulk_price_updates.completed') %>: <%= format_file_timestamp(@results["timestamp"]) %></div>
      </div>
    </div>

    <%= render "results_summary_alert" %>
    <%= render "results_stats" %>
    <%= render "success_details" if total_processed_count(@results) > 0 %>
    <%= render "error_details" if @results["errors"]&.any? %>

    <div class="flex justify-between items-center pt-6 border-t border-base-300">
      <div>
        <%= link_to t('bulk_price_updates.view_products'), products_path, class: "btn btn-outline" %>
      </div>
      <div class="space-x-3">
        <%= link_to t('bulk_price_updates.update_more_prices'), new_bulk_price_update_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

