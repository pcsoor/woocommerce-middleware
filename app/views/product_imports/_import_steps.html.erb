<% current_step ||= 1 %>

<ul class="steps steps-horizontal w-full mb-8">
  <li class="step <%= 'step-primary' if current_step >= 1 %>">
    <div class="step-content">
      <div class="text-sm font-medium">Upload</div>
      <div class="text-xs opacity-70">Select CSV file</div>
    </div>
  </li>

  <li class="step <%= 'step-primary' if current_step >= 2 %>">
    <div class="step-content">
      <div class="text-sm font-medium">Validate</div>
      <div class="text-xs opacity-70">Review products</div>
    </div>
  </li>

  <li class="step <%= 'step-primary' if current_step >= 3 %>">
    <div class="step-content">
      <div class="text-sm font-medium">Configure</div>
      <div class="text-xs opacity-70">Set options</div>
    </div>
  </li>

  <li class="step <%= 'step-primary' if current_step >= 4 %>">
    <div class="step-content">
      <div class="text-sm font-medium">Preview</div>
      <div class="text-xs opacity-70">Final review</div>
    </div>
  </li>

  <li class="step <%= 'step-primary' if current_step >= 5 %>">
    <div class="step-content">
      <div class="text-sm font-medium">Import</div>
      <div class="text-xs opacity-70">Processing</div>
    </div>
  </li>

  <li class="step <%= 'step-primary' if current_step >= 6 %>">
    <div class="step-content">
      <div class="text-sm font-medium">Complete</div>
      <div class="text-xs opacity-70">Results</div>
    </div>
  </li>
</ul>