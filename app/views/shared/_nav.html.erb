<div class="navbar bg-base-100 shadow-sm">
  <div class="flex-1">
    <%= link_to extract_store_name, root_path, class: "text-xl" %>
  </div>
  <div class="flex-none">
    <% if user_signed_in? %>
      <ul class="menu menu-horizontal px-1">
        <li><%= link_to "Products", products_path, class: "#{ current_class?(products_path) }" %></li>
        <li><%= link_to "Categories", categories_path, class: "#{ current_class?(categories_path) }" %></li>
        <li>
          <div class="dropdown dropdown-end">
            <div tabindex="0" role="button">Profile</div>
            <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-1 w-52 p-2 shadow-sm">
              <li><%= link_to "Settings", user_path(current_user) %></li>
              <li><%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "hover:cursor-pointer" %></li>
            </ul>
          </div>
        </li>
      </ul>
    <% end %>
  </div>
</div>
