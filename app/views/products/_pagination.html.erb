<% current_page = (params[:page] || 1).to_i %>
<% per_page = (params[:per_page] || 25).to_i %>

<div class="flex space-x-4 mt-4">
  <% if @current_page > 1 %>
    <%= link_to "Previous Page", products_path(page: @current_page - 1, per_page: per_page, search: params[:search]), class: "btn bg-gray-300 hover:bg-gray-400 text-gray-800 py-2 px-4 rounded" %>
  <% end %>

  <% if @current_page < @total_pages %>
    <%= link_to "Next Page", products_path(page: @current_page + 1, per_page: per_page, search: params[:search]), class: "btn bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded" %>
  <% end %>
</div>
