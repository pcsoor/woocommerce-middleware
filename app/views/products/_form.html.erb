<%= form_with model: @product, method: :put, local: true do |form| %>
  <fieldset class="fieldset bg-base-200 border-base-300 rounded-box border p-4">
    <legend class="fieldset-legend">Edit Product</legend>

    <div class="space-y-4">
      <div class="form-control">
        <label class="label cursor-pointer justify-start">
          <%= form.check_box :featured, { class: "checkbox" }, true, false %>
          <span class="label-text"><%= t('products.featured_product') %></span>
        </label>
      </div>

      <div class="grid gap-6 md:grid-cols-2">
        <div class="form-control">
          <%= form.label :name, t('products.product_name'), class: "label" %>
          <%= form.text_field :name, class: "input input-bordered w-full" %>
        </div>

        <div class="form-control">
          <%= form.label :sku, t('products.sku'), class: "label" %>
          <%= form.text_field :sku, class: "input input-bordered w-full" %>
        </div>
      </div>

      <div class="grid gap-6 md:grid-cols-2">
        <div class="form-control">
          <%= form.label :regular_price, t('products.regular_price'), class: "label" %>
          <%= form.number_field :regular_price, step: :any, class: "input input-bordered w-full" %>
        </div>

        <div class="form-control">
          <%= form.label :sale_price, t('products.sale_price'), class: "label" %>
          <%= form.number_field :sale_price, step: :any, class: "input input-bordered w-full" %>
        </div>
      </div>

      <div class="grid gap-6 md:grid-cols-2">
        <div class="form-control">
          <%= form.label :stock_quantity, t('products.stock_quantity'), class: "label" %>
          <%= form.number_field :stock_quantity, class: "input input-bordered w-full" %>
        </div>

        <div class="form-control">
          <%= form.label :weight, t('products.weight'), class: "label" %>
          <%= form.number_field :weight, step: :any, class: "input input-bordered w-full" %>
        </div>
      </div>

      <div class="form-control">
        <%= form.label :short_description, t('products.short_description'), class: "label" %>
        <%= form.text_area :short_description, rows: 3, class: "textarea textarea-bordered w-full" %>
      </div>

      <%= form.hidden_field :type, value: "simple" %>
      <%= form.hidden_field :manage_stock, value: true %>

      <div class="flex justify-center mt-6">
        <%= form.submit t('forms.update_product'), class: "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>