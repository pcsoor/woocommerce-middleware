<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "mt-8 space-y-6" }) do |f| %>
  <fieldset class="fieldset bg-base-200 border-base-300 rounded-box w-md border p-4 mx-auto">
    <legend class="fieldset-legend">Forgot your password?</legend>

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input w-full" %>

    <%= f.submit "Send me reset password instructions", class: "btn btn-neutral mt-4" %>

    <div class="divider">OR</div>

    <%= render "devise/shared/links" %>
  </fieldset>
<% end %>